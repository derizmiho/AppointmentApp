<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
        <!-- Include the navigation bar -->
        <%- include('partials/nav.ejs') %>

    <h1>Today's Appointments</h1>
    <ul id="appointmentsList"></ul>

    <!-- JavaScript for fetching and displaying appointments -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Fetch and display appointments for today
            fetch('/')
                .then(response => response.json())
                .then(appointments => {
                    // Display fetched appointments
                    appointments.forEach(appointment => {
                        const listItem = document.createElement('li');
                        listItem.textContent = `${appointment.title} - ${new Date(appointment.date).toLocaleString()}`;
                        document.getElementById('appointmentsList').appendChild(listItem);
                    });
                });
        });
    </script>
</body>
</html>
